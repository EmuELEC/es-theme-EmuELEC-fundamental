<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (sega32x)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The 32X is an add-on for the Sega Mega Drive/Genesis video game console. Codenamed "Project Mars", the 32X was designed to expand the power of the Genesis and serve as a transitional console into the 32-bit era until the release of the Sega Saturn. Independent of the Genesis, the 32X uses its own ROM cartridges and has its own library of games. The add-on was distributed under the name Super 32X in Japan, Genesis 32X in North America, Mega Drive 32X in the PAL region, and Mega 32X in Brazil.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: June 1, 1994</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Sega</text>
			</text>
			
			<text name="manufacturer" extra="true">
				<text>Manufacturer: Sega</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Two Hitachi SH2 32-bit RISC</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 256 KB RAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: N/A</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: PWM</text>
			</text>
			
			<text name="display" extra="true">
				<text>Display: 320x240</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: Cartridge</text>
			</text>
			
			<text name="max_controllers" extra="true">
				<text>Max Controllers: 2</text>
			</text>
		</view>
	</feature>
	
</theme>