<theme>

	<formatVersion>4</formatVersion>

	<view name="system">
	
		<image name="background" extra="true">
			<path>./_inc/images/system_bg.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		
		<helpsystem name="help">
			<pos>0.7421875 0.9515</pos>
		</helpsystem>
	
	</view>

	<view name="basic">
		<!-- To Do -->
	</view>

	<view name="detailed, video">
		
		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_inc/images/detail_vid_bg.png</path>
		</image>
		
		<helpsystem name="help">
			<pos>0.4963541666666667 0.9515</pos>
		</helpsystem>

		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.125 0.0694444444444444</pos>
			<maxSize>0.234375 0.1111111111111111</maxSize>
		</image>

		<textlist name="gamelist">
			<selectorColor>387297</selectorColor>
			<selectedColor>efefef</selectedColor>
			<primaryColor>efefef</primaryColor>
			<secondaryColor>888888</secondaryColor>
			<fontPath>./_inc/fonts/BebasNeue.otf</fontPath>
			<pos>0 0.1388888888888889</pos>
			<size>0.25 0.8472222222222222</size>
			<fontSize>0.0333333333333333</fontSize>
			<horizontalMargin>0.0078125</horizontalMargin>
		</textlist>
		
		<text name="system_title" extra="true">
			<pos>0.28125 0.0138888888888889</pos>
			<size>0.6875 0.0694444444444444</size>
			<color>387297</color>
			<fontPath>./_inc/fonts/BebasNeue.otf</fontPath>
			<fontSize>0.0833333333333333</fontSize>
			<alignment>left</alignment>
		</text>
		
		<image name="description_bg" extra="true">
			<origin>0 0</origin>
			<pos>0.28125 0.1527777777777778</pos>
			<size>0.3229166666666667 0.7777777777777778</size>
			<path>./_inc/images/description_bg.png</path>
		</image>
		
		<text name="md_description">
			<pos>0.2890625 0.1666666666666667</pos>
			<size>0.3072916666666667 0.7638888888888889</size>
			<color>efefef</color>
			<lineSpacing>1.079</lineSpacing>
		</text>
		
		<text name="md_lbl_lastplayed, md_lbl_genre, md_lbl_players, md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_playcount">
			<color>efefef</color>
			<fontPath>./_inc/fonts/BebasNeue.otf</fontPath>
		</text>
		
		<text name="md_genre, md_players, md_developer, md_publisher, md_playcount">
			<color>efefef</color>
			<size>0 0</size>
		</text>
		
		<datetime name="md_lastplayed, md_releasedate">
			<color>efefef</color>
		</datetime>
		
		<text name="md_lbl_rating">
			<pos>2 2</pos>
		</text>
		<rating name="md_rating">
			<pos>0.8515625 0.0833333333333333</pos>
			<size>0 0.0416666666666667</size>
			<filledPath>./_inc/images/star_filled.png</filledPath>
			<unfilledPath>./_inc/images/star_empty.png</unfilledPath>
		</rating>
		
		<text name="md_lbl_playcount">
			<pos>0.8645833333333333 0.6666666666666667</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_lastplayed">
			<pos>0.6354166666666667 0.6666666666666667</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_genre">
			<pos>0.6354166666666667 0.7106481481481481</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_players">
			<pos>0.6354166666666667 0.7546296296296296</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>0.6354166666666667 0.7986111111111111</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_developer">
			<pos>0.6354166666666667 0.8425925925925926</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_publisher">
			<pos>0.6354166666666667 0.8865740740740741</pos>
			<forceUppercase>1</forceUppercase>
		</text>

	</view>
	
	<view name="detailed">
		
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.8020833333333333 0.3888888888888889</pos>
			<maxSize>0.3333333333333333 0.4444444444444444</maxSize>
		</image>
	
	</view>
	
	<view name="video">
		
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.8020833333333333 0.3888888888888889</pos>
			<size>0.3333333333333333 0.4444444444444444</size>
			<!-- <default></default> -->
			<!-- <delay>0</delay> -->
			<!-- <showSnapshotNoVideo>false</showSnapshotNoVideo> -->
			<!-- <showSnapshotDelay>true</showSnapshotDelay> -->
		</video>
		
		<image name="md_marquee">
			<pos>0.0293 0.039</pos>
			<origin>0.0 0.0</origin>
			<size>0.5488 0.181</size>
		</image>
	
	</view>
	
	<view name="system, basic, detailed, video">

		<helpsystem name="help">
			<textColor>efefef</textColor>
			<iconColor>efefef</iconColor>
		</helpsystem>

	</view>

</theme>
