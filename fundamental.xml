<theme>

	<formatVersion>4</formatVersion>

	<view name="system">
	
		<image name="background" extra="true">
			<path>./_inc/images/system_bg.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		
		<helpsystem name="help">
			<pos>0.7421875 0.9515</pos>
		</helpsystem>
	
	</view>

	<view name="basic">
		
		<image name="background">
			<path>./_inc/images/basic_bg.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>
		
		<helpsystem name="help">
			<pos>0.4963541666666667 0.9515</pos>
		</helpsystem>
		
		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.0555555555555556</pos>
			<maxSize>0.390625 0.0833333333333333</maxSize>
		</image>
		
		<textlist name="gamelist">
			<selectorColor>387297</selectorColor>
			<selectedColor>efefef</selectedColor>
			<primaryColor>efefef</primaryColor>
			<secondaryColor>888888</secondaryColor>
			<fontPath>./_inc/fonts/BebasNeue.otf</fontPath>
			<pos>0.296875 0.1111111111111111</pos>
			<size>0.40625 0.8333333333333333</size>
			<fontSize>0.0333333333333333</fontSize>
		</textlist>
		
	</view>

	<view name="detailed, video">
		
		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_inc/images/detail_vid_bg.png</path>
		</image>
		
		<helpsystem name="help">
			<pos>0.4963541666666667 0.9515</pos>
		</helpsystem>

		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.125 0.0694444444444444</pos>
			<maxSize>0.234375 0.1111111111111111</maxSize>
		</image>

		<textlist name="gamelist">
			<selectorColor>387297</selectorColor>
			<selectedColor>efefef</selectedColor>
			<primaryColor>efefef</primaryColor>
			<secondaryColor>888888</secondaryColor>
			<fontPath>./_inc/fonts/BebasNeue.otf</fontPath>
			<pos>0 0.1388888888888889</pos>
			<size>0.25 0.8472222222222222</size>
			<fontSize>0.0333333333333333</fontSize>
			<horizontalMargin>0.0078125</horizontalMargin>
		</textlist>
		
		<image name="description_bg" extra="true">
			<origin>0 0</origin>
			<pos>0.28125 0.0694444444444444</pos>
			<size>0.3229166666666667 0.8611111111111111</size>
			<path>./_inc/images/description_bg.png</path>
		</image>
		
		<text name="md_description">
			<pos>0.2890625 0.0833333333333333</pos>
			<size>0.3072916666666667 0.8472222222222222</size>
			<color>efefef</color>
			<lineSpacing>1.087</lineSpacing>
		</text>
		
		<text name="md_lbl_lastplayed, md_lbl_genre, md_lbl_players, md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_playcount">
			<color>efefef</color>
			<fontPath>./_inc/fonts/BebasNeue.otf</fontPath>
		</text>
		
		<text name="md_genre, md_players, md_developer, md_publisher, md_playcount">
			<color>efefef</color>
			<size>0 0</size>
		</text>
		
		<datetime name="md_lastplayed, md_releasedate">
			<color>efefef</color>
		</datetime>
		
		<text name="md_lbl_rating">
			<pos>2 2</pos>
		</text>
		<rating name="md_rating">
			<pos>0.8515625 0.0138888888888889</pos>
			<size>0 0.0416666666666667</size>
			<filledPath>./_inc/images/star_filled.png</filledPath>
			<unfilledPath>./_inc/images/star_empty.png</unfilledPath>
		</rating>
		
		<text name="md_lbl_playcount">
			<pos>0.8645833333333333 0.5694444444444444</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_lastplayed">
			<pos>0.6354166666666667 0.5694444444444444</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_genre">
			<pos>0.6354166666666667 0.6296296296296296</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_players">
			<pos>0.6354166666666667 0.6898148148148148</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>0.6354166666666667 0.75</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_developer">
			<pos>0.6354166666666667 0.8101851851851852</pos>
			<forceUppercase>1</forceUppercase>
		</text>
		
		<text name="md_lbl_publisher">
			<pos>0.6354166666666667 0.8703703703703704</pos>
			<forceUppercase>1</forceUppercase>
		</text>

	</view>
	
	<view name="detailed">
		
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.8020833333333333 0.2916666666666667</pos>
			<maxSize>0.3333333333333333 0.4444444444444444</maxSize>
		</image>
	
	</view>
	
	<feature supported="video">

		<view name="video">
	
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.8020833333333333 0.2916666666666667</pos>
			<maxSize>0.3333333333333333 0.4444444444444444</maxSize>
			<default></default>
			<delay>0.3</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
		</video>
		
		<image name="md_marquee">
			<pos>2 2</pos>
		</image>
	
		</view>
		
	</feature>
		
	<view name="system, basic, detailed, video">

		<helpsystem name="help">
			<textColor>efefef</textColor>
			<iconColor>efefef</iconColor>
		</helpsystem>

	</view>

</theme>
