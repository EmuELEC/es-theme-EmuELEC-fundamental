<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Famicom, which is short for Family Computer, is an 8-bit home computer and video game console released by Nintendo in Japan on July 15th, 1983. It came with two controllers, as well as home versions of three Nintendo arcade games: Donkey Kong, Donkey Kong Jr., and Popeye.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: july 15, 1983</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Nintendo</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>Ricoh 2A03 8-bi </text>
			</text>
			
			<text name="memory" extra="true">
				<text></text>
			</text>
			
			<text name="graphics" extra="true">
				<text></text>
			</text>
			
			<text name="sound" extra="true">
				<text></text>
			</text>
			
			<text name="media" extra="true">
				<text></text>
			</text>
		</view>
	</feature>
	
</theme>